---
import type { ImageMetadata } from 'astro';
import Image from '~/components/common/Image.astro';

import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = (await findImage(post.image)) as ImageMetadata | undefined;

const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';

const isSpotify = !!post.spotify
const isMixcloud = !!post.mixcloud
const isImage = !(isSpotify || isMixcloud)

const spotifySrc = isSpotify ? `https://open.spotify.com/embed/album/${post.spotify}?utm_source=generator` : ''
const mixcloudFeed = isMixcloud ? post.mixcloud?.replace('https://www.mixcloud.com', '').replaceAll('/', '%2F') : ''
const mixcloudSrc = isMixcloud ? `https://player-widget.mixcloud.com/widget/iframe/?feed=${mixcloudFeed}&light=1` : ''

console.log(post.title, isSpotify, isMixcloud, isImage)
---

<!-- Spotify -->
{
  isSpotify && (
    <iframe width="400" class="rounded" src={spotifySrc} width="100%" height="400" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  )
}

<!-- Mixcloud -->
{
  isMixcloud && (
    <iframe width="400" class="rounded" src={mixcloudSrc} width="100%" height="400" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  )
}

<!-- Image -->
{
  isImage &&
    (link ? (
      <a class="relative block group" href={link ?? 'javascript:void(0)'}>
        <div class="relative h-0 pb-[56.25%] md:pb-[75%] lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">
          {image && (
            <Image
              src={image}
              class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
              widths={[400, 900]}
              width={900}
              sizes="(max-width: 900px) 400px, 900px"
              alt={post.title}
              aspectRatio="16:9"
              loading="lazy"
              decoding="async"
            />
          )}
        </div>
      </a>
    ) : (
      <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">
        {image && (
          <Image
            src={image}
            class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            width={900}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="16:9"
            loading="lazy"
            decoding="async"
          />
        )}
      </div>
    ))
}
