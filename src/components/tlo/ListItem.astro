---
import Item from '~/components/blog/ListItem.astro';
import Detail from '~/components/tlo/Detail.astro';
import Video from '~/components/tlo/Video.astro';

import type { Post } from '~/types';

export interface Props {
  post: Post;
}

const { post } = Astro.props;

const isVideo = post.category?.slug === 'videos';
const isDetail = post.category?.slug === 'details';
const isItem = !(isVideo || isDetail);
---

{isVideo && (
  <Video post={post} />
)}

{isDetail && (
  <Detail post={post} />
)}

{isItem && (
  <Item post={post} />
)}
